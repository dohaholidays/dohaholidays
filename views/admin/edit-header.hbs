<section>
    <div class="container-lg">
        <div class="row">
            <div class="col-md-6"><br><br><br>
    <div class="header-content header-style-five position-relative d-flex align-items-center justify-content-between">
          <!-- Back Button-->
          <div class="back-button"><a href="/admin/all-headers"><svg width="32" height="32" viewBox="0 0 16 16" class="bi bi-arrow-left-short" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
<path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"></path>
</svg></a></div>
          <!-- Page Title-->
          <div class="page-heading">
            <h3 class="mb-6">Update Carousel</h3>
          </div>
          <!-- Navbar Toggler-->
          <div class="navbar--toggler" id="affanNavbarToggler"><span class="d-block"></span><span class="d-block"></span><span class="d-block"></span></div>
        </div><br><br>   
        
        
                     <form action="/admin/edit-header/{{header._id}}" enctype="multipart/form-data" method="POST">
                    <label for="" class="mt-3">Title</label>
                    <input type="text" name="Name" class="form-control" value="{{header.Name}}" required>
                    

                    <label for="" class="mt-3">Description</label>
                    <textarea type="text" name="Description" class="form-control" value="" required>{{header.Description}}</textarea><br>

                    <label for="" class=" mb-2">Image</label><br>
                    <img src="/images/header-images/{{header._id}}.png" alt=""
                        style="width: 10rem; margin-bottom: 12px;" id="imgView">
                        <br>
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                    <a href="/admin/all-headers" class="btn btn-danger mt-4">Cancel</a>
                </form><br>
            </div><br><br>
        </div><br>
    </div>
</section>




<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>