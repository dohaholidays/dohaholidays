<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6"><br><br><br>
                <h2 class="text-center">Add Services</h2>
                <form action="/admin/add-product" enctype="multipart/form-data" method="POST">
                    <label for="">Title</label>
                    <input type="text" name="Name" class="form-control" required>

                    <label for="">Path Location (/services)</label>
                    <input type="text" name="Category" class="form-control" required>

                    <label for="">Sub Heading</label>
                    <input type="text" name="Price" class="form-control" required>

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" required>

                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control" required>

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                     <a href="/admin/all-products" class="btn btn-danger mt-4">Cancel</a>

                </form>
            </div>
        </div>
    </div>
</section>